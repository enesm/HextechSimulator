<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="@color/colorFrameGoldEnd"
                android:startColor="@color/colorFrameGoldStart" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/colorErrorLightRed"
                android:endColor="@color/colorErrorDarkRed"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>