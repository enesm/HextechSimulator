<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"><stroke
            android:color="@android:color/black"
            android:width="1dp"/>
            <padding
            android:bottom="3dp"
            android:left="3dp"
            android:right="3dp"
            android:top="3dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/colorFrameGoldEnd"
                android:startColor="@color/colorFrameGoldStart" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

</layer-list>